<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="270dp"
    android:background="@color/navi_blue"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+mojeObaveze/dialog_ostali_naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Redovita Nastava"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Sati u tjednu:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+mojeObaveze/dialog_ostali_sati"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right" >

        <Button
            android:id="@+mojeObaveze/dialog_ostali_spremi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/button_selector_plava2"
            android:padding="10dp"
            android:text="Spremi"
            android:textColor="@color/bijela" />

        <Button
            android:id="@+mojeObaveze/dialog_ostali_odustani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="3dp"
            android:background="@drawable/button_selector_plava3"
            android:padding="10dp"
            android:text="Odustani"
            android:textColor="@color/bijela"  />

    </LinearLayout>

</LinearLayout>