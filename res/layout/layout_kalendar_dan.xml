<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btnPrviEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/ruzicasta1"
            android:lines="1"
            android:padding="5dp"
            android:textColor="@color/bijela"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/btnDrugiEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/zelena1"
            android:lines="1"
            android:padding="5dp"
            android:textColor="@color/bijela"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/danDatum"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.2"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/siva" />

</LinearLayout>