<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navi_blue"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Pocetna"
    tools:ignore="HardcodedText,ContentDescription,UselessParent" >

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="55dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.49"
        android:background="@drawable/button_selector_background"
        android:src="@drawable/ic_info" />

    <TableLayout
        android:layout_width="500dp"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center"
        android:weightSum="6" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/btnKalendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector_crvena1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kalendar"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/btnGodina"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector_crvena2"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_godina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Godina"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/btnPredmeti"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/button_selector_plava1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ucenik" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Predmetini uspjeh"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnUspjehUcenici"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/button_selector_plava2"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ucenik" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Uspjeh učenici"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/btnUceniciRaspored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/button_selector_plava3"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ucenik" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Raspored"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/popisUcenika"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/button_selector_plava4"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ucenik" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Popis Učenika"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/btnMojeObaveze"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/button_selector_zelena1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ucenik_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Moje obaveze"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPlanRada"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/button_selector_zelena2"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ucenik_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Plan mog rada"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/btnMojRaspored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/button_selector_zelena3"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ucenik_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Moj Raspored"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bijela" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>